{
  "name": "stockalert-chrome-extension",
  "version": "1.0.0",
  "description": "Detect stock symbols on any webpage and create alerts or add to watchlist with StockAlert.pro",
  "type": "module",
  "scripts": {
    "dev": "vite build --watch --mode development",
    "build": "tsc && vite build && npm run copy-css",
    "copy-css": "mkdir -p dist/src/content && cp src/content/content.css dist/src/content/",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "format": "prettier --write \"src/**/*.{ts,tsx,css}\"",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "chrome-extension",
    "stock-alerts",
    "finance",
    "stocks",
    "investing"
  ],
  "author": "StockAlert.pro",
  "license": "Proprietary",
  "devDependencies": {
    "@crxjs/vite-plugin": "^2.0.0-beta.23",
    "@types/chrome": "^0.0.258",
    "@types/node": "^20.11.5",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "autoprefixer": "^10.4.17",
    "eslint": "^8.56.0",
    "postcss": "^8.4.33",
    "prettier": "^3.2.4",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.11",
    "vite-plugin-static-copy": "^1.0.0"
  },
  "dependencies": {
    "zod": "^3.22.4"
  }
}
